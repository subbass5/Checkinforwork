<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/style_background_round"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"

        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:text="@string/input_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:background="#F9A825"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_show"
                android:text=""
                android:textColor="#FFF"
                android:textSize="27sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/img1"
                    android:background="@drawable/number1"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageButton
                    android:id="@+id/img2"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/number2"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageButton
                    android:id="@+id/img3"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/number3"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/img4"
                    android:background="@drawable/number4"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageButton
                    android:id="@+id/img5"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/number5"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageButton
                    android:id="@+id/img6"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/number6"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/img7"
                    android:background="@drawable/number7"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageButton
                    android:id="@+id/img8"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/number8"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageButton
                    android:id="@+id/img9"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/number9"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/img0"
                    android:background="@drawable/number0"
                    android:layout_marginLeft="30dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageButton
                    android:id="@+id/imgdel"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/delete"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>
            <Button
                android:id="@+id/btn_ok"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="ยืนยัน"
                android:textSize="20sp"
                android:backgroundTint="@color/bootstrap_brand_info"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_close"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="ปิด"
                android:textSize="20sp"
                android:backgroundTint="@color/bootstrap_brand_danger"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>